menu_ativo = false;
fim_de_jogo = false;

option = 1;

up = 0;
down = 0;

pega_input = function()
{
    up = keyboard_check_pressed(vk_up);
    down = keyboard_check_pressed(vk_down);
    confirm = keyboard_check_pressed(vk_space) xor keyboard_check_pressed(vk_enter);
}

controla_menu_paused = function()
{
    if (up && option > 1)
    {
        option --;
    }
    if (down && option < 3)
    {
        option ++;
    }
    
    if (confirm)
    {
        switch (option) 
        {
        	case 1:
            {
                global.pause = false;
            }
            break;
        
            case 2:
            {
                room_restart();
            }
            break;
        
            case 3:
            {
                game_end();
            }
            break;
        } 
    }
}

controla_menu_morto = function()
{
    if (up && option > 1)
    {
        option --;
    }
    if (down && option < 2)
    {
        option ++;
    }
    
    if (confirm)
    {
        switch (option) 
        {
        	case 1:
            {
                room_restart();
            }
            break;
        
            case 2:
            {
                game_end();
            }
            break;
        
            
        } 
    }
}